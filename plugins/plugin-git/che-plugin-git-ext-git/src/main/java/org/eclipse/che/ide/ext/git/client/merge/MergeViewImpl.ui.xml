<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='org.eclipse.che.ide.ext.git.client.GitLocalizationConstant'/>
    <ui:with field='res' type='org.eclipse.che.ide.ext.git.client.GitResources'/>
    <ui:style>
        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .spacing {
            margin-top: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="350px" height="270px" addStyleNames="{style.emptyBorder}" debugId="git-merge-mainForm">
        <g:center>
            <g:ScrollPanel ui:field="referencesPanel" addStyleNames="{res.gitCSS.simpleListContainer}"
                           debugId="git-merge-referencesPanel"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>