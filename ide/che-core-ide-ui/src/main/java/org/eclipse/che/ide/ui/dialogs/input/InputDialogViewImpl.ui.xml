<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .emptyBorder {
            margin: 0 12px;
        }

        .label {
            text-overflow: ellipsis;
        }

        .input {
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            width: 100%;
        }

        .errorHint {
            color: red;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="360px" height="70px" addStyleNames="{style.emptyBorder}" debugId="dialog-input">
        <g:center>
            <g:Grid width="100%" height="100%">
                <g:row>
                    <g:customCell verticalAlignment="ALIGN_MIDDLE">
                        <g:Label ui:field="label" addStyleNames="{style.label}"/>
                    </g:customCell>
                    <g:customCell verticalAlignment="ALIGN_MIDDLE">
                        <g:TextBox ui:field="value" addStyleNames="{style.input}"/>
                    </g:customCell>
                </g:row>
            </g:Grid>
        </g:center>
        <g:south size="29">
            <g:Label ui:field="errorHint" addStyleNames="{style.errorHint}"/>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>