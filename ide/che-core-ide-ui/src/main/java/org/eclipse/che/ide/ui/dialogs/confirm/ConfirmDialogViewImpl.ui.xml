<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .content-block {
            min-width: 30em;
            min-height: 4em;
            max-width: 60em;
            max-height: 20em;
            padding: 1em;
        }

        .content {
            /*
                Not sure we need styles below, commenting them makes dialogs looking better.
            */
            /*width: -webkit-fill-available;*/
            /*width: -moz-fill-available;*/
            /*width: fill-available;*/
            /*height: 100%; /!* in case the other values are not understood *!/*/
            /*height: -webkit-fill-available;*/
            /*height: -moz-fill-available;*/
            /*height: fill-available;*/

            display: -webkit-flex;
            display: flex;
            -webkit-flex-flow: column;
            flex-flow: column;
            -webkit-align-items: stretch;
            align-items: stretch;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.content-block}">
        <g:SimplePanel ui:field="content" addStyleNames="{style.content}"/>
    </g:HTMLPanel>
</ui:UiBinder>