<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .innerPanel {
            width: 12px;
            height: 12px;
            float: left;
            cursor: pointer;
            margin-top: 3px;
        }

        .innerPanel:active {
            opacity: 0.4;
        }

        .outerPanel {
            position: relative;
            width: 18px;
            height: 18px;
            margin: 6px 0 6px 3px;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.outerPanel} ">
        <g:FlowPanel ui:field="buttonPanel" addStyleNames="{style.innerPanel}">
            <g:SimpleLayoutPanel ui:field="image"/>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>