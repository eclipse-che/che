<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .widget {
            display: inline-block;
        }

        .container {
            float: left;
            width: 353px;
        }

        .selectedElementName {
            color: inherit;
            font-size: inherit;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .imagePanel {
            float: right;
        }
    </ui:style>

    <g:FlowPanel ui:field="listHeader" debugId="dropDownHeader" styleName="{style.widget}">
        <g:FlowPanel ui:field="selectedElement" addStyleNames="{style.container}">
            <g:FlowPanel ui:field="selectedElementName" addStyleNames="{style.selectedElementName}"/>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="{style.imagePanel}">
            <g:FlowPanel ui:field="dropButton"/>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
