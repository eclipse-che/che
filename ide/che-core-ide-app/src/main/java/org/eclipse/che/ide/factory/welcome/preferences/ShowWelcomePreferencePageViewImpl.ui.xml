<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .main {
            margin: 5px;
        }

        .title {
            margin-top: 1em;
            margin-bottom: 0.2em;
            font-size: 16px;
        }

    </ui:style>

    <g:FlowPanel styleName="{style.main}">
        <g:Label addStyleNames="{style.title}">Welcome for persistent workspaces</g:Label>
        <g:CheckBox ui:field="showWelcome">Enable</g:CheckBox>
    </g:FlowPanel>

</ui:UiBinder>