<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .emptyBorder {
            margin: 6px;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .errorMsg {
            color: red;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="350px" height="300px" addStyleNames="{style.emptyBorder}">
        <g:north size="95.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:north size="20.0">
                    <g:Label text="Import Code Formatter"/>
                </g:north>
                <g:center size="25.0">
                    <g:FormPanel ui:field="uploadForm" debugId="import-from-config-uploadForm"/>
                </g:center>
                <g:south size="20.0">
                    <g:Label ui:field="errorMessage" text="" styleName="{style.errorMsg}"/>
                </g:south>
                <g:south size="25.0">
                    <g:Button ui:field="importButton" text="Import" width="70px" height="25px"/>
                </g:south>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>

</ui:UiBinder>
