<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="locale" type="org.eclipse.che.ide.CoreLocalizationConstant"/>

    <ui:style>

        @eval popupLoaderTextColor org.eclipse.che.ide.api.theme.Style.theme.popupLoaderTextColor();

        .main {
            width: 140px;
            height: 45px;
            position: absolute;
            left: 5px;
            top: 5px;
        }

        .button {
            position: relative;
            left: 0px;
            top: 5px;
            height: 20px;
            line-height: 18px;
            float: left;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.main}">
        <g:Button ui:field="button" addStyleNames="{style.button}" text="{locale.startWsButton}"/>
    </g:FlowPanel>

</ui:UiBinder>
