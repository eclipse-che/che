<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="locale" type="org.eclipse.che.ide.CoreLocalizationConstant"/>

    <ui:style>

        .main {
            width: 150px;
            height: 45px;
            position: absolute;
            right: 5px;
            top: 5px;
            float: right;
        }

        .button {
            position: relative;
            left: 0px;
            top: 5px;
            height: 20px;
            line-height: 18px;
            float: right;
            margin-left: 3px;
        }

    </ui:style>

    <g:FlowPanel addStyleNames="{style.main}">
        <g:Button ui:field="restartButton" addStyleNames="{style.button}" text="{locale.restartWsAgentButton}" />
        <g:Button ui:field="ignoreButton" addStyleNames="{style.button}" text="{locale.ignoreWsAgentButton}" />
    </g:FlowPanel>

</ui:UiBinder>
