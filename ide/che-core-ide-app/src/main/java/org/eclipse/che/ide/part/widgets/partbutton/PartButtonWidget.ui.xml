<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .button {
            cursor: pointer;
            position: relative;
        }

        .icon {
        }

        .icon svg {
            width: 14px;
            height: 14px;
            position: absolute;
            left: 4px;
            top: 6px;
        }

    </ui:style>

    <g:FlowPanel styleName="{style.button}">
        <g:FlowPanel ui:field="iconPanel" styleName="{style.icon}"/>
    </g:FlowPanel>

</ui:UiBinder>
