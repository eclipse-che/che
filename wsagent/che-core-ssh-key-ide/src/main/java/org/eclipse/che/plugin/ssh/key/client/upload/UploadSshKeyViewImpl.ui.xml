<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='org.eclipse.che.plugin.ssh.key.client.SshKeyLocalizationConstant'/>
    <ui:style>
        .emptyBorder {
            margin: 6px;
        }

        .spacing {
            margin-bottom: 10px;
        }
    </ui:style>
    <g:FormPanel ui:field="uploadForm">
        <g:DockLayoutPanel unit="PX" width="350px" height="120px" addStyleNames="{style.emptyBorder}">
            <g:north size="50.0">
                <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                    <g:north size="20.0">
                        <g:Label text="{locale.hostFieldTitle}"/>
                    </g:north>
                    <g:center>
                        <g:TextBox width="342px" name="name" ui:field="host"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:north>
            <g:north size="50.0">
                <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                    <g:north size="20.0">
                        <g:Label text="{locale.fileNameFieldTitle}"/>
                    </g:north>
                    <g:center>
                        <g:SimplePanel>
                            <g:FileUpload ui:field="file" name="privateKey" height="22px" width="100%"/>
                        </g:SimplePanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:north>
            <g:north size="20.0">
                <g:Label ui:field="message"/>
            </g:north>
            <g:center>
                <g:Hidden name="service" value="vcs"/>
            </g:center>
        </g:DockLayoutPanel>
    </g:FormPanel>
</ui:UiBinder>
