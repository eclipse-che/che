.project-source-selector
  position relative
  min-width 720px

  .che-template-checker
    max-width 200px
    float left

    & > *
      margin-bottom 5px

      &:first-child
        margin-top 0

      &:last-child
        margin-bottom 0

    .add-project

      .md-button
        border-color $primary-color
        background-color $primary-color
        color white
        height 50px

        md-icon
          min-width 35px
          text-align center

          &:before
            font-size 28px

        &:hover
          background-color darken($primary-color, 10%)

      .toggle-single-button-multiline
        width 90px

    .project-metadata .md-button
      height 50px

    button
      position relative
      line-height 33px
      border-radius 2px
      float none
      display block
      text-align left
      width 200px
      text-overflow ellipsis
      overflow hidden

      md-icon.cheico-project
        float left
        line-height inherit

      md-icon
        padding 0
        min-width 30px
        text-align center

        &:before
          font-size 14px

  .project-source-selector-popover
    background-color #FBFBFB
    position relative
    display block
    float left
    min-height 50px
    width calc(100% - 210px)
    max-width inherit
    min-width 500px
    z-index 70

    & > div.arrow
      top: 24px

  md-divider
    border-top-color $box-border-color !important
    margin 0
    margin-top 21px

  .toggle-single-button-title
    font-size 13px

  .project-source-selector-popover-content

    .project-source-selector-popover-toggle-buttons, .project-source-selector-popover-sources
      margin 1px 35px 17px 35px

    .project-source-selector-popover-toggle-buttons
      .che-toggle-button .che-toggle-title
        font-size 12px

    .project-source-selector-button

      che-button-primary button.md-button.che-button.md-accent,
      che-button-cancel-flat button.md-button.che-button.md-accent,
      che-button-danger button.md-button.md-danger-theme.md-accent
        padding-top 2px
        margin 6px !important

      che-button-cancel-flat button.md-button.che-button.md-accent,
      che-button-danger button.md-button.md-danger-theme.md-accent
        background-color $che-white-color !important
        border none !important
        box-shadow none !important

        &[disabled] span
          color $disabled-color !important

      che-button-cancel-flat button.md-button.che-button.md-accent span
        color $grey-input-label-color !important

      che-button-danger button.md-button.md-danger-theme.md-accent span
        color $error-color !important
