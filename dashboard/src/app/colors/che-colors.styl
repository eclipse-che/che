// box shadows
box-shadow-simple()
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

box-shadow-bigger()
  box-shadow 0 2px 6px 0 rgba(0, 0, 0, 0.40)

che-border-radius(n)
  border-radius n !important

che-brightness(n)
  filter brightness(n)
