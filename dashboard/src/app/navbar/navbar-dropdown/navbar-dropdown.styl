.navbar-dropdown
  height inherit
  outline none

  div
    height inherit
    outline none

  .md-button
    height inherit
    min-width 100%
    padding 0
    margin 0

  .navbar-dropdown-elements
    height initial
    z-index 1
    left 0
    position absolute
    width 100%
    padding 0 10px

    ul
      list-style none
      padding 0
      margin 0

      li
        background-color white
        display list-item
        outline none

        .navbar-click-area
          che-border-radius(2px)
          border-bottom hidden
          display block
          padding 2px 10px
          color $label-secondary-color
          box-shadow inset 0 1px 0 rgba(255, 255, 255, 1)
          cursor pointer
          outline none

      li:first-child
        border-top-left-radius 2px
        border-top-right-radius 2px
        padding-top 5px

      li:last-child
        border-bottom-left-radius 2px
        border-bottom-right-radius 2px
        padding-bottom 5px

      li:hover .navbar-click-area
        background $hover-on-list-color



