div#che-notification-container
  position fixed
  margin-right 20px
  z-index 1000
  top 20px

md-toast.che-notification-info,
md-toast.che-notification-error
  transition-delay 0s
  transition .3s
  box-shadow 0 1px 1px 2px rgba(0, 0, 0, 0.15)
  che-border-radius(2px)
  width 588px
  max-height 288px
  position relative
  margin-bottom 5px
  left inherit
  background-color #ffffff
  border-color $night-foggy-sky-color

md-toast.hide-notification
  box-shadow none
  overflow hidden
  max-height 0
  opacity 0
  padding 0
  margin 0

md-toast.che-notification-info div,
md-toast.che-notification-error div
  justify-content flex-start

i.che-notification-close-icon
  margin 2px 5px
  color $clear-foggy-sky-color

i.che-notification-info-icon
  margin 5px 10px
  color $che-green-color

i.che-notification-error-icon
  margin 5px 10px
  color $red-lipstick-color

md-toast.che-notification-info
  color #3c763d

md-toast.che-notification-info span,
md-toast.che-notification-error span
  margin-left 5px
  max-height 100%
  overflow auto

span.che-notification-error-title
  color $red-lipstick-color

span.che-notification-message
  color $dark-menacing-sky-color
